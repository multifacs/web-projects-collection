<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Заказ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="https://getbootstrap.com/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="30"
                    height="24" class="d-inline-block align-text-top">
                иццерия
            </a>
            <a href="/"><button type="button" class="btn btn-light">Домой</button></a>
            <a href="/feedbacks"><button type="button" class="btn btn-light">Отзывы</button></a>
        </div>
    </nav>
    <div class="container mt-5">
        <form action="" method="post">
            <div class="row">
                <div class="col d-flex flex-column justify-content-center align-items-start">
                    <h2>
                        <%= pizza.name %>
                    </h2>
                    <img src="/<%= pizza.id %>.jpeg" alt="" class="w-75">
                    <p>
                        <%= pizza.description %>
                    </p>
                    <div class="d-flex gap-3">
                        <h3>
                            Итоговая стоимость: 
                        </h3>
                        <h3 id="cost">
                            <%= pizza.cost %>
                        </h3>
                    </div>
                </div>
                <div class="col d-flex flex-column justify-content-center align-items-center">
                    <% for (var [key, value] of Object.entries(pizza.dop)) { %>
                        <div class="row d-flex flex-row justify-content-start align-items-center">
                            <p class="col">
                                <%= key %>:
                            </p>
                            <p class="col">
                                <%= value %> руб.
                            </p>
                            <input class="col" type="number" name="<%= key %>" value="0" id="<%= key %>"
                                onchange="changeCost('<%= key %>')">
                        </div>
                        <% } %>
                            <label for="address">Адрес</label>
                            <input type="text" id="address" name="address" required>
                            <label for="name">Имя</label>
                            <input type="text" id="name" name="name" required>
                            <label for="tel">Телефон</label>
                            <input type="tel" id="tel" name="tel" required>
                            <input type="submit" class="mt-5" value="Заказать">
                </div>
            </div>
        </form>
    </div>
    <script>
        const cost = <%= pizza.cost %>
        const dop = <%- JSON.stringify(pizza.dop) %>

        const changeCost = (curr) => {
            const inp = document.getElementById(curr);
            if (inp.value < 0) {
                inp.value = 0;
            } else if (inp.value > 10) {
                inp.value = 10;
            }
            let dop_cost = 0;
            for (const [key, value] of Object.entries(dop)) {
                const input = document.getElementById(key);
                dop_cost += value * parseInt(input.value);
            }
            const total_cost = document.getElementById('cost');
            total_cost.innerHTML = parseInt(cost + dop_cost);
        }
    </script>
</body>

</html>